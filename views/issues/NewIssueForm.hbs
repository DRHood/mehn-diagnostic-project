<h2>Open New Issue</h2>

<form method="POST" action="/issues">
    <div class="form-group">
        <label for="description">Issue Description</label>
        <input type="text" name="description" id="description" placeholder="Description">
    </div>

    <div class="form-group">
        <label for="status">Issue Status</label>
        <input type="text" name="status" id="status" placeholder="Status">
    </div>

    <div class="form-group">
        <label for="priority">Issue Priority</label>
        <input type="text" name= "priority" id="priority" placeholder="Priority">
    </div>

    

    <input type="submit" class="btn btn-primary" value="Create Issue" />
</form>